# ============================================================================
# MAGNUS WEALTH - VARIÁVEIS DE AMBIENTE
# ============================================================================
# 
# Copie este arquivo para .env e preencha com suas credenciais
# Comando: cp .env.example .env
# 
# ============================================================================

# ============================================================================
# TELEGRAM API
# ============================================================================
# Obtenha suas credenciais em: https://my.telegram.org/apps

TELEGRAM_API_ID=seu_api_id_aqui
TELEGRAM_API_HASH=seu_api_hash_aqui
TELEGRAM_PHONE=+5511999999999
TELEGRAM_GROUP_USERNAME=@nome_do_grupo_ou_id

# ============================================================================
# FLASK CONFIGURATION (Opcional - para API REST)
# ============================================================================

FLASK_ENV=production
FLASK_DEBUG=False
PORT=5000

# ============================================================================
# SECURITY (Para webhooks de cron)
# ============================================================================

CRON_TOKEN=generate_a_random_secure_token_here

# ============================================================================
# BINANCE API (FUTURES)
# ============================================================================
# Obtenha suas chaves em: https://www.binance.com/en/my/settings/api-management
# IMPORTANTE: Habilite "Futures" nas permissões da API

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

ALAVANCAGEM=12
CAPITAL_TOTAL=2000
STOP_LOSS_PERCENT=5
TRADING_ATIVO=false  # true para ativar trading automático, false para apenas análise

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================
# 
# 1. NUNCA commite o arquivo .env no GitHub!
# 2. Adicione .env ao .gitignore
# 3. No Railway/Heroku, configure as variáveis no dashboard
# 4. A sessão do Telegram (magnus_session.session) também é sensível!
# 

